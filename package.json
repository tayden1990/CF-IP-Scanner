{
  "name": "cf-ip-scanner",
  "version": "2.0.42",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build:backend": "python build_backend.py",
    "build:frontend": "cd frontend && npm run build",
    "dist": "npm run build:frontend && npm run build:backend && electron-builder"
  },
  "keywords": [],
  "author": "Antigravity",
  "license": "AGPL-3.0-only",
  "description": "Cloudflare IP Scanner Desktop App",
  "repository": {
    "type": "git",
    "url": "https://github.com/tayden1990/CF-IP-Scanner.git"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "tayden1990",
        "repo": "CF-IP-Scanner"
      }
    ],
    "appId": "com.antigravity.scanner",
    "productName": "Antigravity Scanner",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "package.json",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/.env",
        "to": ".env"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "extraResources": [
        {
          "from": "backend/dist/backend.exe",
          "to": "backend.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "extraResources": [
        {
          "from": "backend/dist/backend",
          "to": "backend"
        }
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  }
}